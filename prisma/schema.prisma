generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Barber {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  Appointment Appointment[]

  @@map("barbers")
}

model Appointment {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  barberId    String @db.ObjectId
  barber      Barber @relation(fields: [barberId], references: [id])
  barberName  String
  location    String
  service     String
  firstName   String
  lastName    String
  phoneNumber String
  date        String
  time        String

  @@map("appointments")
}
